@model IEnumerable<Eclerx.Kallem.MVC._2.Models.Books>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            @Html.ActionLink("Add New Book", "Create", "Books")
            <h2>Books Details</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <table class="table table-hover">
                <tr>
                    <th>Book Id</th>
                    <th>Book Name</th>

                </tr>
                @foreach (var prd in Model)
                {
                    <tr>
                        <td>@prd.BookId</td>
                        <td>@Html.ActionLink(prd.BookName, "Details", "Book", new { id = prd.BookId }, null) </td>

                    </tr>
                }

            </table>
        </div>
    </div>
</div>

