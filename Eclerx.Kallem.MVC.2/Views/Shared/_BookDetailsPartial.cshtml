@model Eclerx.Kallem.MVC._2.ViewModels.DetailsByGenreVM

@if (Model.Books != null)
{
    if (Model.Books.Count() > 0)
    {
        <div class="col-6 mb-3">
            <table class="table table-striped table-hover">
                <tr>
                    <th>Book Name</th>
                    <th>Genre</th>
                    <th>Author Name</th>
                </tr>
                @foreach (var prd in Model.Books)
                {
                    <tr>
                        <td>@prd.BookName</td>
                        <td>@prd.Genre</td>
                        <td>@prd.AuthorName</td>
                    </tr>
                }
            </table>
        </div>
    }
    else
    {
        <div class="h3">No Records</div>
    }
}
